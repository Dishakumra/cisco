enable
  conf term
    hostname S4
    int vlan 40
      ip address 10.10.40.254 255.255.255.0
      no shutdown

    int Fa0/1
      switchport mode access
      switchport access vlan 40
    int Fa1/1
      switchport mode access
      switchport access vlan 40
    int Fa2/1
      switchport mode access
      switchport access vlan 40
    int Fa3/1
      switchport mode access
      switchport access vlan 40
      exit
    exit

  copy running-config startup-config
    startup-config
